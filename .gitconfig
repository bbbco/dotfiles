[push]
	default = simple
[user]
	name = Brian Goad
	useconfigonly = true
[core]
	editor = vim
[merge]
	tool = meld
[pager]
	log = perl /usr/share/doc/git/contrib/diff-highlight/diff-highlight | less -XF
	show = perl /usr/share/doc/git/contrib/diff-highlight/diff-highlight | less -XF
	diff = perl /usr/share/doc/git/contrib/diff-highlight/diff-highlight | less -XF
[pull]
	rebase = true
[alias]
	diff-last = diff @~..@
	diff-staged = diff --cached
	unstage = reset HEAD
    uncommit = reset --soft HEAD^
    work-config = config user.email "bgoad@tivo.com"
    github-config = config user.email "bdgoad@gmail.com"
    hard-reset = reset --hard
    save = !sh -c 'export PREV=$(git symbolic-ref HEAD|cut -d/ -f3-) && git checkout -b "$1" && git commit -am "$1" && git checkout "$PREV"' -
    discard = checkout -- 

[gc]
	auto = 1
[fetch]
	prune = true
[credential]
	helper = cache
