# Daily Working Dir
function dwd() {
    if [[ $(uname) == "Darwin" ]]; then
      if [ -n "$1" ]; then
          DATE="$(gdate -d ${1} +%Y%m%d)"
      else
          DATE="$(gdate +%Y%m%d)"
      fi
    else
      if [ -n "$1" ]; then
          DATE="$(date -d ${1} +%Y%m%d)"
      else
          DATE="$(date +%Y%m%d)"
      fi
    fi
    DWD="${HOME}/dwd/${DATE}"
    if [ ! -d "${DWD}" ]; then
        mkdir "${DWD}"
    fi
    echo "${DWD}"
}

function _dwd() {
    DWD=$(dwd ${@})
    cd ${DWD}
}

