# Git
function git_branch() {
    git symbolic-ref -q --short HEAD || git describe --tags --exact-match
}

function is_git() {
    [ -d .git ] || git rev-parse --git-dir > /dev/null 2>&1
}

function git_root() {
    git rev-parse --show-toplevel
}

